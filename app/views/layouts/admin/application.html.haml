!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Admin
    = stylesheet_link_tag "admin/application", media: "all", "data-turbolinks-track": "reload"
    = csrf_meta_tags
    = javascript_include_tag "admin/application", "data-turbolinks-track": "reload"

  %body.sb-nav-fixed
    = render "layouts/admin/header"
    #layoutSidenav
      = render "layouts/admin/sidebar"
      #layoutSidenav_content
        .container-fluid
          - if notice
            %p.alert.alert-success
              = notice
          - if alert
            %p.alert.alert-danger
              = alert
          = yield
        = render "layouts/admin/footer"
    = render "layouts/admin/toastr"
