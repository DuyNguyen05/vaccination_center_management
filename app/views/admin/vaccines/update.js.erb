<% if @vaccine.errors.any? %>
  toastr["warning"]("<%= I18n.t("error") %> <%= j @vaccine.errors.full_messages.join('; ') %>")
<% else %>
  $("#vaccines").html("<%= j render 'admin/vaccines/vaccine', vaccines: @vaccines %>");
  $("#modalVaccineEdit<%= @vaccine.id %>").modal("hide");
  toastr["info"]("<%= I18n.t("admin.vaccines.update.updated") %>");
<% end %>
