.modal.fade.bd-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1", id: "modalCompanyEdit#{company.id}"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h4
          %b= t(".edit_company")
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = form_with model: [:admin, @company], method: :patch do |f|
          .form-group
            = f.label Company.human_attribute_name(:company_code)
            = f.text_field :company_code, class: "form-control", disabled: true
          .form-group
            = f.label Company.human_attribute_name(:name)
            = f.text_field :name, class: "form-control"
          .form-group
            = f.label Company.human_attribute_name(:address)
            = f.text_field :address, class: "form-control"
          = f.submit t(".submit"), class: "btn btn-primary"
