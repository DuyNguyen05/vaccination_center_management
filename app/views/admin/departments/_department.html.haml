- departments.each do |department|
  %tr.text-center{id: "department#{department.id}"}
    %td{"data-link": "#{admin_department_path(department)}"}
      = department.id
    %td{"data-link": "#{admin_department_path(department)}"}
      = link_to department.name, admin_department_path(department)
    %td{"data-link": "#{admin_department_path(department)}"}
      = department.detail
    %td
      = link_to edit_admin_department_path(department, format: "js"), remote: true, class: "btn btn-primary mr-3" do
        %i.fa.fa-pencil-square-o{"aria-hidden" => "true"}
      = link_to admin_department_path(department, format: "js"),  method: :delete, data: { confirm: t("confirm.are_you_sure") }, remote: true, class: "btn btn-danger" do
        %i.fa.fa-trash{"aria-hidden" => "true"}
