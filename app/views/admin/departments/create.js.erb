<% if @department.errors.any? %>
  toastr["warning"]("<%= I18n.t("error") %> <%= j @department.errors.full_messages.join('; ') %>")
<% else %>
  $("#deparments").html("<%= j render 'admin/departments/department', departments: @departments %>");
  $("#modalDepartment").modal("hide");
  $(".modal-body input").val("")
<% end %>
