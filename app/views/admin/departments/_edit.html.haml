.modal.fade.bd-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1", id: "modalDepartmentEdit#{department.id}"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h4
          %b= t(".edit_department")
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = form_with model: [:admin, @department], method: :patch do |f|
          .form-group
            = f.label Department.human_attribute_name(:name)
            = f.text_field :name, class: "form-control"
          .form-group
            = f.label Department.human_attribute_name(:detail)
            = f.text_field :detail, class: "form-control"
          = f.submit t(".submit"), class: "btn btn-primary"
