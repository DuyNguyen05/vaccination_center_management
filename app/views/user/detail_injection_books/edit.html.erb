<div class="card shadow mb-4" style="z-index: 0;">
  <div class="card-header py-3 text-center">
    <div class="px-0 pt-4 pb-0 mt-3 mb-3">
      <h2><strong>Quy trình tiêm</strong></h2>
      <p>Điền thông tin theo các bước</p>
      <div class="row">
        <div class="col-md-12 mx-0">
          <%= form_for [:user, @detail_injection_book], url: user_detail_injection_book_path(@detail_injection_book), method: :patch, local: true, id: "msform" do |form| %>
            <ul id="progressbar">
              <li class="active" id="account"><strong>Khám trước tiêm</strong></li>
              <li id="personal"><strong>Tiêm</strong></li>
              <li id="payment"><strong>Thanh toán hóa đơn</strong></li>
              <li id="personal"><strong>Phản ứng sau tiêm</strong></li>
              <li id="confirm"><strong>Kết thúc</strong></li>
            </ul>
            <fieldset>
              <%= render "#{@detail_injection_book.current_step}", form: form %>
              <%= hidden_field_tag :id, @detail_injection_book.id %>
              <%= link_to 'Hủy', "#", class: "previous action-button-previous", type: "button", name: "previous" %>
              <%= form.submit 'Quay lại', class: "previous action-button-previous", name: "back_button" unless @detail_injection_book.first_step? %>
              <%= form.submit 'Tiếp theo', class: "next action-button" %>
            </fieldset>
          <% end %>
        </div>
    </div>
  </div>
</div>
