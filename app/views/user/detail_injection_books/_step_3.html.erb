<div class="container border border-secondary rounded">
  <div class="row mt-5">
    <div class="well col-xs-10 col-sm-10 col-md-12 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <address>
            <strong>Trung tâm tiêm chủng Quốc Tế</strong>
            <br>
            <%= vaccination_center.address %>
            <br>
            <abbr title="Phone">P:</abbr> <%= vaccination_center.number_phone %>
          </address>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 text-right">
          <p>
              <em>Thời gian: <%= Time.now.strftime("%Hh:%Mm, %d - %m - %Y ") %></em>
          </p>
          <p>
              <em>Mã Hóa đơn #: <%= detail_injection_book.bill.code %></em>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 text-center">
          <h1>Hóa đơn</h1>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Sản phẩm </th>
              <th>SL</th>
              <th class="text-center">Đơn giá</th>
              <th class="text-center">Giá</th>
            </tr>
          </thead>
          <tbody>
            <% detail_bill(detail_injection_book).each  do |detail_bill| %>
              <tr>
                <td class="col-md-9"><em><%= detail_bill.vaccine.name %></em></td>
                <td class="col-md-1" style="text-align: center"><%= detail_bill.number_injection %> </td>
                <td class="col-md-1 text-center"><%= number_with_delimiter(detail_bill.vaccine.price) %></td>
                <td class="col-md-1 text-center"><%= (detail_bill.number_injection)*(detail_bill.vaccine.price.to_f) %></td>
              </tr>
            <% end %>
            <tr>
              <td>
                <p>
                    <strong>Tổng:&nbsp;</strong>
                </p>
                <p>
                    <strong>Thuế:&nbsp;</strong>
                </p>
              </td>
              <td class="text-center"> <p><%= number_injections detail_injection_book %></p><p></p> </td>
              <td >
              </td>
              <td class="text-center">
              <p>
                  <strong><%= amount detail_injection_book %></strong>
              </p>
              <p>
                  <strong>0</strong>
              </p></td>
            </tr>
            <tr>
              <td> &nbsp; </td>
              <td> &nbsp; </td>
              <td class="text-right"><h4><strong>Thành tiền:&nbsp;</strong></h4></td>
              <td class="text-center text-danger"><h4><strong><%= total_price detail_injection_book %></strong></h4></td>
            </tr>
          </tbody>
        </table>
        <div class="col-xs-12 col-sm-12 col-md-12 text-right">
          <%= link_to 'In hóa đơn', "#" %>
        </div>
      </div>
    </div>
  </div>
</div>
