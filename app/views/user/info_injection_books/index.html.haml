.row
  .col-xl-12.col-lg-12
    .card
      .card-header.py-3
        %h3.text-lg.m-0.font-weight-bold.text-uppercase.text-center
          =  t(".user_management")
      .card.my-4
        .card-header
          %i.fas.fa-search.mr-1
          = t(".search_title")
        .card-body
          .row.col-xl-12.col-lg-12
            .col-lg-12
              = form_tag user_info_injection_books_path, method: :get, class: "navbar-search" do
                .row
                  .col-sm-12
                    .form-group
                      = text_field_tag :query, params[:query], class: "form-control input_search", placeholder: t(".search")
                    = button_tag(type: "button", class: "btn btn-secondary cancel_search") do
                      = t(".cancel_search")
                    = button_tag(type: "submit", class: "btn btn-primary") do
                      = t(".search_title")
          %hr
      .card.mb-4
        .card-header
          .row
            .col-md-6
              %i.fas.fa-table.mr-1
              = t(".info_injection_books")
            .col-md-6.text-right
              = link_to(new_user_info_injection_book_path, class: "btn btn-primary" ) do
                %i.fas.fa-user-plus
        .card-body
          .table-responsive
            %table.table.table-bordered.table-hover
              %thead
                %tr
                  %th= Account.human_attribute_name("user_code")
                  %th= InfoInjectionBook.human_attribute_name("guardian_name")
                  %th= InfoInjectionBook.human_attribute_name("father_name")
                  %th= InfoInjectionBook.human_attribute_name("mother_name")
                  %th= InfoInjectionBook.human_attribute_name("number_phone")
                  %th= InfoInjectionBook.human_attribute_name("email")
                  %th= t("action")
              %tbody#info_injection_book
                = render "info_injection_book", info_injection_books: @info_injection_books
            = paginate @info_injection_books, theme: "twitter-bootstrap-4"
