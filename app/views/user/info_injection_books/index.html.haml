.row
  .col-xl-12.col-lg-12
    .card.shadow.mb-4
      .card-header.py-3
        %h4.text-lg.m-0.font-weight-bold.text-primary.text-uppercase.text-center
          =  t(".user_management")
      .well.form-horizontal
        .card-body
          .row.col-xl-12.col-lg-12
            .col-lg-9
              = link_to(new_user_info_injection_book_path, class: "btn btn-primary" ) do
                %i.fas.fa-user-plus
            .col-lg-3
              = form_tag user_info_injection_books_path, method: :get, class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" do
                .input-group
                  = text_field_tag :query, params[:query], class: "form-control bg-light border-0 small", placeholder: t(".search")
                  .input-group-append
                    = button_tag(type: "submit", class: "btn btn-primary") do
                      %i.fas.fa-search.fa-sm
          %hr
          .table-responsive
            %table.table.table-bordered.table-hover
              %thead
                %tr
                  %th= Account.human_attribute_name("user_code")
                  %th= InfoInjectionBook.human_attribute_name("father_name")
                  %th= InfoInjectionBook.human_attribute_name("identify_father")
                  %th= InfoInjectionBook.human_attribute_name("mother_name")
                  %th= InfoInjectionBook.human_attribute_name("identify_mother")
                  %th= InfoInjectionBook.human_attribute_name("number_phone")
                  %th= InfoInjectionBook.human_attribute_name("email")
                  %th= InfoInjectionBook.human_attribute_name("current_address")
                  %th= InfoInjectionBook.human_attribute_name("permanent_address")
                  %th
              %tbody
                = render "info_injection_book", info_injection_books: @info_injection_books
            = paginate @info_injection_books, theme: "twitter-bootstrap-4"
