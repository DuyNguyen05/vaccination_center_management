<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <% if notice %>
        <p class= "alert alert-success">
          <%= notice %>
        </p>
      <% end %>
      <% if alert %>
        <p class= "alert alert-danger">
          <%= alert %>
        </p>
      <% end %>
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">
                    <%= t(".header") %>
                  </h1>
                </div>
                <%= form_for resource, as: resource_name, url: session_path(resource_name), class: "user" do |f| %>
                  <%= render "shared/error_message", resource: resource %>
                  <div class="form-group">
                    <%= f.text_field :user_code, class: "form-control form-control-user", id: "exampleInputEmail", placeholder: t(".user_code") %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control form-control-user", id: "exampleInputPassword", placeholder: t(".password") %>
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                      <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
                      <label class="custom-control-label" for="customCheck">
                        <%= t(".remember_me") %>
                      </label>
                    </div>
                  </div>
                  <%= f.submit t(".login"), class: "btn btn-primary btn-user btn-block" %>
                <% end %>
                <hr>
                <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
                  <div class="text-center">
                    <%= link_to t(".forgot_password"), "#", class: "small" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
