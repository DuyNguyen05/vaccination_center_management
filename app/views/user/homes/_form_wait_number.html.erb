<div class="modal fade bs-example-modal-lg" id="modalWaitNumber<%= account.id %>" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <%= form_with model: [:user, account.doctor_rooms.build] do |f| %>
        <%= f.hidden_field :account_id, value: account.id %>
        <div class="modal-header">
          <h4 class="text-lg m-0 font-weight-bold text-uppercase text-center"><%= t(".take_wait_number") %></h4>
          <button class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="our-services container-fluid">
            <div class="row">
              <label class="col-md-4 text-left">
                <h7><%= t(".room") %></h7>
              </label>
              <div class="col-md-8">
                <b><%= t(".job") %> <%= account.details_info.full_name %></b>
              </div>
            </div>
            <hr class="sidebar-divider my-0 mb-3">
            <div class="service-row">
              <div class="form-group ml-0">
                <div class="row">
                  <label class="col-md-4 text-left">
                    <%= t(".select") %>
                  </label>
                  <div class="col-md-8">
                    <div class="input-group">
                      <%= f.select :injection_book_id, {}, {} , {class: "select_injection_books form-control bg-light border-1", data: { placeholder: t(".select_injection_books.placeholder") } }%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group  text-left">
              <div class="row">
                <label class="col-md-4">
                  <%= t(".appointment") %>
                </label>
                <div class="col-md-8 inputGroupContainer">
                  <div class="form-check-inline">
                    <label class="form-check-label container">Có hẹn lịch trước
                      <%= f.radio_button :appointment, true, class: "form-check-input" %>
                      <span class="checkmark"></span>
                    </label>
                  </div>
                  <div class="form-check-inline">
                    <label class="form-check-label container">Chưa hẹn lịch trước
                      <%= f.radio_button :appointment, false, class: "form-check-input" %>
                      <span class="checkmark"></span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <br>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
          <%= f.submit t(".create"), class: "btn btn-primary "%>
        </div>
      <% end %>
    </div>
  </div>
</div>
