<div class="row">
  <div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold">
          <%= t(".list_room") %>
        </h6>
        <div class="dropdown no-arrow">
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <% Account.where(role_id: 5).each do |account| %>
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-<%= check_online account %> shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="font-weight-bold text-<%= check_online account %> text-uppercase mb-1">
                        <%= link_to  t(".job") + account.details_info.full_name, user_wait_numbers_path(account_id: account.id)%>
                        <%#= t(".injection_book_is_waiting") %>
                      </div>
                      <div class="text-xs mb-0 font-weight-bold text-gray-800"><i class="fas fa-users"></i> <span id="count_injection_book_waiting_<%= account.id %>"><%= account.doctor_rooms.count %></span> <%= t(".status") %></div>
                    </div>
                    <div class="col-auto">
                      <div class="float-right">
                        <% unless current_user_account.is_user? %>
                          <%= link_to(new_user_wait_number_path(account_id: account.id, format: 'js'), remote: true, class: "btn btn-#{check_online account} #{check_button account}") do%>
                            <i class="fas fa-user-plus"></i>
                          <% end %>
                        <% end %>
                        <%#= render "form_wait_number", account: account %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
